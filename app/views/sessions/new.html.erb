<h1>Sign in</h1>

<p id="alert"><%= alert %></p>

<%= form_tag sessions_path do %>
    <div class="field">
      <%= label_tag :username %><br>
      <%= text_field_tag :username, params[:username] %>
    </div>
    <div class="field">
      <%= label_tag :password %><br>
      <%= password_field_tag :password, params[:password] %>
    </div>
    <%= submit_tag "Log in" %>
<% end %>